<?xml version="1.0" encoding="UTF-8"?>
<elasticMapper name="patient">
    <!--property配置字段映射信息
        sourceName：源字段名称
        targetName: 目标字段名称
        convert： 是否进行转换， 如果true, 则将通过调用方法或者动态执行sql获取转换后的值
        valueType: 字段数据类型，
        dicType: 字典类型  包括：dept，sex， national，admType，diagnoseType，diagnoseName，marital
        -->
    <!--
        parameter: 为源数据字段名称
    -->
    <property sourceName="pat_regno" targetName="Pat_RegNo"  convert="false" valueType="java.lang.String" idField="true" routingField="true"></property>
    <property sourceName="pat_recordno" targetName="Pat_RecordNo"  convert="false" valueType="java.lang.String"></property>
    <property sourceName="pat_name" targetName="Pat_Name"  convert="false" valueType="java.lang.String"></property>
    <property sourceName="pat_gender_code" targetName="Pat_Gender"  convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.Sex</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">pat_gender_code</parameter>
    </property>
    <property sourceName="pat_idcard" targetName="Pat_IDCard"  convert="false" valueType="java.lang.String"></property>
    <property sourceName="pat_nation_code" targetName="Pat_Nation"  convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.National</dicType>
        <method>getByCode</method>
        <!--如果不设置， 默认为当前属性的sourceName-->
        <parameter type="java.lang.String">pat_nation_code</parameter>
    </property>
    <property sourceName="pat_marital_code" targetName="Pat_Marital" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.Marital</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">pat_marital_code</parameter>
    </property>
    <property sourceName="pat_birthday" targetName="Pat_Birthday"  convert="true" valueType="java.lang.Date" format="yyyy-MM-dd">
        <method>formatDate</method>
        <parameter type="java.lang.String">pat_birthday</parameter>
    </property>
