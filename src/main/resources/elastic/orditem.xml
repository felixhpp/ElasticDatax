<?xml version="1.0" encoding="UTF-8"?>
<elasticMapper name="diagnose">
    <!--property配置字段映射信息
        sourceName：源字段名称
        targetName: 目标字段名称
        convert： 是否进行转换， 如果true, 则将通过调用方法或者动态执行sql获取转换后的值
        valueType: 字段数据类型，
        dicType: 字典类型   com.example.demo.core.dics 包下的类路径
        -->
    <property sourceName="ord_id"  targetName="Ord_Id" convert="false" valueType="java.lang.String" idField="true"></property>
    <property sourceName="ord_admno" targetName="Ord_AdmNo"  convert="false" valueType="java.lang.String" parentField="true"></property>
    <property sourceName="ord_regno" targetName="Ord_RegNo"  convert="false" valueType="java.lang.String" routingField="true"></property>
    <!--医嘱代码-->
    <property sourceName="ord_code" targetName="Ord_DicCode"  convert="false" valueType="java.lang.String"></property>
    <!--医嘱名称-->
    <property sourceName="ord_code" targetName="Ord_Name" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.OrderItem</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_code</parameter>
    </property>
    <!--医嘱大分类-->
    <property sourceName="ord_cate_code" targetName="Ord_Category"  convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.OrdCateage</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_cate_code</parameter>
    </property>
    <!--医嘱类型-->
    <property sourceName="ord_type_code" targetName="Ord_Type"  convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.OrdType</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_type_code</parameter>
    </property>
    <!--周期-->
    <property sourceName="ord_period" targetName="Ord_Period" convert="false" valueType="java.lang.String">
    </property>
    <!--疗程-->
    <property sourceName="ord_duration_code" targetName="Ord_Duration" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.Duration</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_duration_code</parameter>
    </property>
    <!--用法 - 用药途径-->
    <property sourceName="ord_usage" targetName="Ord_Usage" convert="false" valueType="java.lang.String">
    </property>
    <!--频次-->
    <property sourceName="ord_freq_code" targetName="Ord_Freq" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.Freq</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_freq_code</parameter>
    </property>
    <!--医嘱开始时间-->
    <property sourceName="ord_startdate" targetName="Ord_StartTime" convert="true" valueType="java.lang.String">
        <!--concatDatatime转换方法 支持两个参数， 默认第一个参数为sourceName， 第二个参数为parameter中字段的值-->
        <method>concatDatatime</method>
        <parameter>ord_starttime</parameter>
    </property>
    <!--医嘱状态-->
    <property sourceName="ord_status_code" targetName="Ord_Status" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.OrderStatus</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_status_code</parameter>
    </property>
    <!--医嘱数量-->
    <property sourceName="ord_orderqty" targetName="Ord_OrderQty" convert="false" valueType="java.lang.String">
    </property>
    <!--医嘱结束时间-->
    <property sourceName="ord_enddate" targetName="Ord_EndTime" convert="true" valueType="java.lang.String">
        <!--concatDatatime转换方法 支持两个参数， 默认第一个参数为sourceName， 第二个参数为parameter中字段的值-->
        <method>concatDatatime</method>
        <parameter>ord_endtime</parameter>
    </property>
    <!--开医嘱科室-->
    <property sourceName="ord_dept_code" targetName="Ord_Dept" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.Deptartment</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_dept_code</parameter>
    </property>
    <!--执行医嘱科室-->
    <property sourceName="ord_execdept_code" targetName="Ord_ExecDept" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.Deptartment</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_execdept_code</parameter>
    </property>
    <!--归一后医嘱编码-->
    <property sourceName="ord_code" targetName="Ord_MedDicCode" convert="false" valueType="java.lang.String">
    </property>
    <!--归一后医嘱名称-->
    <property sourceName="ord_code" targetName="Ord_MedDicName" convert="true" valueType="java.lang.String">
        <dicType>com.example.demo.core.dics.OrderItem</dicType>
        <method>getByCode</method>
        <parameter type="java.lang.String">ord_code</parameter>
    </property>
</elasticMapper>